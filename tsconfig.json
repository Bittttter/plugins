{
	"compilerOptions": {
		"target": "ES2016",
		"lib": [
			"ES2021",
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"alwaysStrict": false,
		"noImplicitUseStrict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"baseUrl": "./",
		"paths": {
			"@volar-plugins/*": [
				"packages/*/src"
			],
		},
		"noEmit": true,
	},
	"include": [
		"packages/*/src",
	],
	"references": [
		{
			"path": "packages/css/tsconfig.build.json"
		},
		{
			"path": "packages/emmet/tsconfig.build.json"
		},
		{
			"path": "packages/html/tsconfig.build.json"
		},
		{
			"path": "packages/json/tsconfig.build.json"
		},
		{
			"path": "packages/prettier/tsconfig.build.json"
		},
		{
			"path": "packages/prettyhtml/tsconfig.build.json"
		},
		{
			"path": "packages/pug/tsconfig.build.json"
		},
		{
			"path": "packages/pug-beautify/tsconfig.build.json"
		},
		{
			"path": "packages/sass-formatter/tsconfig.build.json"
		},
		{
			"path": "packages/typescript/tsconfig.build.json"
		},
		{
			"path": "packages/vetur/tsconfig.build.json"
		},
	]
}